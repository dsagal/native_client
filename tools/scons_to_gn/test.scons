# Test file for scons_to_gn

sources = ['A.c', 'B.c', 'C.c']
defines = []

if env.Bit('win'):
  sources += ['win']
if env.Bit('target_x86_32'):
  defines += ['_x86']
if env.Bit('target_x86_64'):
  defines += ['_x64']

if True:
  sources += ['FOOBAR.c']


env.ComponentLibrary('all.dll', sources, CFLAGS=['-D' + x for x in defines])

nacl_env = env.Clone()
nacl_env.Append(CFLAGS=['-DNACL'])

if nacl_env.Bit('win'):
  nacl_env.ComponentLibrary('win.dll', sources)

if env.Bit('linux'):
  env.ComponentLibrary('linux.so', sources)
